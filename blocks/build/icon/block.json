{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "pryvus/icon",
  "title": "Icon",
  "category": "media",
  "icon": "art",
  "description": "Display an icon with customizable appearance",
  "keywords": ["icon", "symbol", "graphic", "pryvus", "material"],
  "version": "1.0.0",
  "textdomain": "pryvus-2026",
  "supports": {
    "align": ["left", "center", "right"],
    "spacing": {
      "margin": true,
      "padding": true
    },
    "color": {
      "text": true,
      "background": true
    }
  },
  "attributes": {
    "icon": {
      "type": "string",
      "default": "star"
    },
    "iconSize": {
      "type": "number",
      "default": 48
    },
    "iconColor": {
      "type": "string"
    },
    "customIconColor": {
      "type": "string"
    },
    "backgroundColor": {
      "type": "string"
    },
    "customBackgroundColor": {
      "type": "string",
      "default": "transparent"
    },
    "backgroundSize": {
      "type": "number",
      "default": 80
    },
    "borderRadius": {
      "type": "number",
      "default": 8
    },
    "hasBorder": {
      "type": "boolean",
      "default": false
    },
    "borderColor": {
      "type": "string",
      "default": "#4C8DFF"
    },
    "borderWidth": {
      "type": "number",
      "default": 2
    }
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css"
}
